    .card-header.bg-primary.text-white.header-elements-inline {
        margin-bottom: 2rem;
    }
</style>
<div class="card">
    <div class="card border-1 border-primary">
        <div class="card-header bg-primary text-white header-elements-inline">
            <h6 class="card-title">بخش سولات</h6>
            <div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>
                    <a class="list-icons-item" data-action="reload"></a>
                    <a class="list-icons-item" data-action="remove"></a>
                </div>
            </div>
        </div>
        <form asp-action="Create" method="post">
            <div class="form-group row">
                <div class="col-lg-5">
                    <div class="row">
                        <label class="col-md-5 col-form-label text-lg-right">Question Category </label>
                        <div class="col-md-5">
                            <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control"></select>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5">
                    <div class="row">
                        <label class="col-md-5 col-form-label text-lg-right">Question Type </label>
                        <div class="col-md-5">
                            <select asp-for="QuestionTypeId" asp-items="ViewBag.QuestionTypeId" class="form-control"> </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-5">
                    <div class="row">
                        <label class="col-md-5 col-form-label text-lg-right">Question </label>
                        <div class="col-md-7">
                            <textarea asp-for="Lebel"></textarea>
                            @*<input type="text" asp-for="Lebel" class="form-control"/>*@
                        </div>
                    </div>
                </div>


            </div>
            <div class="form-group row">
                <div class="col-lg-5">
                    <div class="row">
                        <label class="col-md-5 col-form-label text-lg-right">Score </label>
                        <div class="col-md-5">
                            <input type="text" asp-for="Point" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="row">
                        <label class="col-md-5 col-form-label text-lg-right">Is Active? </label>
                        <div class="col-md-5">
                            <input type="checkbox" asp-for="IsActive" checked="" />

                        </div>
                    </div>
                </div>
            </div>

            <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
                <div class="d-flex">
                    <div class="breadcrumb">
                        <i class="icon-menu8 mr-2 breadcrumb-item"></i>
                    </div>

                </div>
                <div class="header-elements d-none">
                    <div class="breadcrumb ">
                        <button type="submit" class="btn bg-blue ml-1 legitRipple">Search <i class="icon-search4 ml-2"></i></button>
                        <button type="submit" class="btn bg-blue ml-1  legitRipple">Save <i class="icon-checkmark ml-2"></i></button>
                        <button type="submit" class="btn bg-blue ml-1 legitRipple">Back <i class="icon-reply ml-2"></i></button>
                    </div>
                </div>
            </div>
            <div class="table-responsive table-scrollable">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Username</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Eugene</td>
                            <td>Kopyov</td>
                            <td>Kopyov</td>
                        </tr>
                        <tr>
                            <td>Garry</td>
                            <td>Smith</td>
                            <td>Garry</td>
                        </tr>


                    </tbody>
                </table>
            </div>
        </form>



    </div>







</div>
<partial name="_ShowMessages" />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



